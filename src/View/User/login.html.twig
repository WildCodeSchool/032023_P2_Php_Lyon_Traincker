{% extends 'layout.html.twig' %}
    {% block content %}
    
    <div class="display-login row">
    <div class= "wrapper mx-auto">
      <div class="form-box login">
        <h2>Connectez-vous</h2>
        <form action="" method="post">
          <div class="input-box">
            <input type="text" name="login" id="login" required>
            <label for="login">Email</label>
          </div>
          <div class="input-box">
            <input type="password" name="password" id="password" required>
            <label for="password">Mot de passe</label>
          </div>
          <button type="submit" class="btn-popup">Se connecter</button>
          <div class="login-register"><p>Vous n'avez pas de compte ?</br><a href="#" class="register-link">S'enregistrer</a></p>
          </div>
        </form>
      </div>
    
      <div class="form-box register">
        <h2>Inscrivez-vous</h2>
        <form action="" method="post">
          <div class="input-box">
            <input type="text" name="username" id="username" required>
            <label for="username">Nom d'utilisateur</label>
          </div>
          <div class="input-box">
            <input type="text" name="login" id="login" required>
            <label for="login">Email</label>
          </div>
          <div class="input-box">
            <input type="password" name="password" id="password" required>
            <label for="password">Mot de passe</label>
          </div>
          <button type="submit" class="btn-popup">S'inscrire</button>
          <div class="login-register"><p>Vous avez déjà un compte ?</br><a href="#" class="login-link">Se connecter</a></p>
          </div>
        </form>
      </div>
    </div>
    </div>
    
    
    {% block javascript %}
      <script src="../assets/js/loginform.js"></script>
    {% endblock %}
    {% endblock %}