<style>
		/* styles pour la barre latérale */
		.sidebar {
			height: 100%;
			width: 200px;
			position: fixed;
			z-index: 1;
			top: 0;
			left: 0;
			background-color: #111;
			overflow-x: hidden;
			padding-top: 20px;
		}
		.sidebar a {
			padding: 6px 8px 6px 16px;
			text-decoration: none;
			font-size: 20px;
			color: #818181;
			display: block;
		}
		.sidebar a:hover {
			color: #f1f1f1;
		}
		.main {
			margin-left: 200px;
			padding: 0px 10px;
		}
		/* styles pour la table CRUD */
		table {
			border-collapse: collapse;
			width: 100%;
		}
		th, td {
			text-align: left;
			padding: 8px;
			border-bottom: 1px solid #ddd;
		}
		tr:hover {
			background-color: #f5f5f5;
		}
		th {
			background-color: #4CAF50;
			color: white;
		}
	</style>
</head>
{% block content %}

	<!-- barre latérale -->
	<div class="sidebar">
		<a href="#">Dashboard</a>
		<a href="#">USER</a>
		<a href="#">Trains</a>
		<a href="#">Station</a>
	</div>

	<!-- contenu principal -->
	<div class="main">
		<h1>Utilisateurs</h1>
		<!-- bouton Ajouter -->
		<button class="btn btn-primary" onclick="ajouter()">Ajouter</button>
		<!-- table CRUD -->
		<table class="table table-striped">
			<thead>
				<tr>
					<th>ID</th>
					<th>Nom</th>
					<th>Email</th>
					<th>Action</th>
				</tr>
			</thead>
			<tbody>
			{% for station in stations %}
				<tr>
					<td>
						{{ station.id }}
					</td>
					<td>
                        {{ station.name }}
                    </td>
					<td>
						john@example.com
					</td>
					<td>
						<button class="btn btn-primary" onclick="editer(1)">Editer</button>
						<form action="/admin/delete" method="POST">
							<input type="hidden" name="id" value="{{ station.id }}">
							<button>Supprimer</button>
						</form>
					</td>
				</tr>
				{% endfor %}
			</tbody>
		</table>
		{% endblock %}