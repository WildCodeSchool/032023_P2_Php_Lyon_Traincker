{% set ballCount = 6 %}
{% set ballClass = "ball mx-1 d-none d-md-block rounded-pill" %}

<section class="home-header text-light p-5 d-flex align-items-center justify-content-center">
    <div class="container rounded-pill text-center d-flex align-items-center justify-content-center">
        {% for i in ballCount .. 1 %}
            <div class="ball-{{i}} {{ballClass|raw}}"></div>
        {% endfor %}
                <h1 class="header-title mx-4 text-nowrap">Choisissez une gare</h1>
        {% for i in 1 .. ballCount %}
            <div class="ball-{{i}} {{ballClass|raw}}"></div>
        {% endfor %}
    </div>
</section>
