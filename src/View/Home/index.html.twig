{% extends 'layout.html.twig' %}


{% block content %}
<div class="homepage bg-image">
    <div class="p-3 bg-color">  
        <div class="train-menu-title d-flex justify-content-around align-items-center">
            <h1 class="text-center text-light-emphasis text-md-danger">
                Choisissez votre gare
            </h1>
        </div>

        <div class = "bg-Button py-3 d-none d-md-flex">
            <div class = "container col-md-10 mx-auto">
                <div class = "row">
        
        {% for station in stations %}

                    <div class="desktop-train-menu d-grid gap-1 col-md-6 cd-6 py-2">
                        <a href="/timesheet/train-list?id={{ station.id }}" class="btn btn-custom btn-hover-image px-3 py-3 rounded-pill border-light border-2 fw-bold text-start" role="button" > {{ station.name }}</a><br>
                    </div>
           
        {% else %}
            <li>Nothing to display</li>
        {% endfor %}
                </div>
            </div>
        </div>
        {% include "Home/index_mobile.html.twig" %}
    </div>
</div>    
{% endblock %}
